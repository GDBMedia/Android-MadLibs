<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.gdbmedia.madlibs.MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:layout_marginTop="35dp"
                android:id="@+id/title"
                android:textColor="@color/accent"
                android:textSize="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/input1"
                android:layout_width="match_parent"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:hint="City" />
            <EditText
                android:id="@+id/input2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:layout_below="@+id/input1"
                android:hint="Date" />
            <EditText
                android:id="@+id/input3"
                android:layout_width="match_parent"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input2"
                android:hint="Venue" />
            <EditText
                android:id="@+id/input4"
                android:layout_width="match_parent"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input3"
                android:hint="Band/Performer" />
            <EditText
                android:id="@+id/input5"
                android:layout_width="match_parent"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input4"
                android:hint="Band/Performer" />

            <EditText
                android:id="@+id/input6"
                android:layout_width="match_parent"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input5"
                android:hint="Favorite Band" />

            <EditText
                android:id="@+id/input7"
                android:layout_width="match_parent"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input6"
                android:hint="Adjective" />

            <EditText
                android:id="@+id/input8"
                android:layout_width="match_parent"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input7"
                android:hint="Adjective" />
            <EditText
                android:id="@+id/input9"
                android:layout_width="match_parent"
                android:layout_margin="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input8"
                android:hint="Adjective" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Mad Lib"
                android:id="@+id/createButton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/accent"
                android:textColor="@color/icons"
                android:layout_below="@+id/input9"
                android:onClick="click"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
